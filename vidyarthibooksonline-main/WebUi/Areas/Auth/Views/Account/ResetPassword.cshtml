@model ResetPasswordDto
@{
    ViewData["Title"] = "Reset Password";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center " style="height: 70vh;">
        <div class="col-lg-4 col-md-4 ">
            <div class="card">
                <div class="card-body bg-light">
                    <h4 class="mb-3">Reset Password</h4>
                    <hr />
                    <form id="submit-form" method="post" asp-action="SaveResetPassword">

                        <div class="form-group mb-3">
                            <label asp-for="MobileNumber" class="form-label">Mobile Number</label>
                            <input asp-for="MobileNumber" class="form-control p-2" value="@ViewBag.MobileNumber" readonly />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Otp" class="form-label">OTP</label>
                            <input asp-for="Otp" class="form-control p-2" placeholder="Enter OTP" />
                            <span asp-validation-for="Otp" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NewPassword" class="form-label">New Password</label>
                            <input asp-for="NewPassword" class="form-control p-2" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control p-2" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="pt-2">
                            <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
           
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_AjaxCallPartial" />
}

@model LoginDTOs
@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid vh-100">
    <div class="row h-100 m-0">
        <!-- Left Image Section -->
        <div class="col-lg-6 d-none d-lg-flex align-items-center justify-content-center p-0">
            <img src="/images/schoolzone1.jpeg" alt="Login Image" class="w-50 h-50">
        </div>

        <!-- Right Form Section -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center shadow-lg p-0">
            <div class="w-75 px-5">
                <div class="text-left mb-4">
                    <h1 class="fw-bold"><em>Admin LogIn</em></h1>
                    <hr />
                </div>
                <form id="submit-form" method="post" asp-action="LoginUser">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input asp-for="Email" type="text" class="form-control p-2" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control p-2" id="exampleInputPassword1">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="flexCheckChecked">
                            <label class="form-check-label" for="flexCheckChecked">
                                Remember this Device
                            </label>
                        </div>
                        <a class="text-primary fw-medium" href="/forgot-password">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-2">Sign In</button>
                </form>
               
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_AjaxCallPartial" />
}
@model List<CouponDto>
@using System.Globalization
@{
    ViewData["Title"] = "Coupons";
}

<div class="container-fluid">
    <div class="header">
        <h1 class="header-title">Coupon List</h1>
        
    </div>

    <div class="row">
        <div class="col-12">
           
            <div class="card">
                <div class="card-header bg-primary">
                    <a asp-action="Upsert" class="btn btn-dark float-end btn-sm">Add New</a>
                </div>
                <div class="card-body">
                    <table id="datatables-multi" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Code</th>
                                <th>Description</th>
                                <th>Discount</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                var i = 1;
                                foreach (var obj in Model)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@obj.Code</td>
                                        <td>@obj.Description</td>
                                        <td>@(obj.DiscountAmount + (obj.DiscountType == "Percentage" ? "%" : " ₹"))</td>
                                        <td>@obj.StartDate.ToString("dd-MM-yyyy", new CultureInfo("en-IN"))</td>
                                        <td>@obj.EndDate.ToString("dd-MM-yyyy", new CultureInfo("en-IN"))</td>
                                        <td>
                                            <span class="badge bg-@(obj.IsActive ? "success" : "danger")">
                                                @(obj.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>

                                            <form class="delete" asp-action="Delete" asp-route-id="@obj.Id">

                                                <a asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-sm btn-primary me-1">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                                <button type="submit" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>

                                        </td>
                                       
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_AjaxCallPartial" />
}
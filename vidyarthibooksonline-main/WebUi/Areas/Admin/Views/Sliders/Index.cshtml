@model List<SlideBannerDto>

@{
    ViewData["Title"] = "Manage Website Banners";
}

<div class="container-fluid">
    <div class="header d-flex justify-content-between align-items-center mb-3">
        <h1 class="header-title">Manage Website Banners</h1>
        
    </div>

    <div class="card">
        <div class="card-header bg-primary">
            <a class="btn btn-primary btn-sm float-end" asp-action="Upsert">+ Add New</a>
        </div>
        <div class="card-body">
            <table id="datatables-multi" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Redirect URL</th>
                        <th>Image</th>
                        <th>Order</th>
                        <th>Status</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Id</td>
                            <td>@obj.Title</td>
                            <td>@obj.Description</td>
                            <td><a href="@obj.RedirectUrl" target="_blank">@obj.RedirectUrl</a></td>
                            <td>
                                @if (!string.IsNullOrEmpty(obj.ImageUrl))
                                {
                                    <img src="@obj.ImageUrl" alt="Banner" width="100" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@obj.DisplayOrder</td>
                            <td>
                                @if (obj.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>@obj.StartDate.ToShortDateString()</td>
                            <td>@(obj.EndDate?.ToShortDateString() ?? "-")</td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@obj.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this banner?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_AjaxCallPartial" />
    
}

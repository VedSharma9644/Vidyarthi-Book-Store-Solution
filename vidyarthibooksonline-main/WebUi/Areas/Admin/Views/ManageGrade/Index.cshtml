@model List<GradeDto>
@{
    ViewData["Title"] = "Grade List";
}

<div class="container-fluid">
    <div class="header d-flex justify-content-between align-items-center">
        <h1 class="header-title">Manage Grades</h1>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <a asp-action="Upsert" class="btn btn-sm btn-warning float-end">Add New</a>
                </div>
                <div class="card-body">
                    <table id="datatables-multi" class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Grade Name</th>
                                <th>School</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var grade in Model)
                            {
                            <tr>
                                <td>@grade.Id</td>
                                <td>@grade.Name</td>
                                    <td>
                                       @grade.School.Name - @grade.School.BranchName 
                                    </td>
                                <td>
                                    <form class="delete" asp-action="Delete" asp-route-id="@grade.Id">
                                           
                                            <a asp-action="Upsert" asp-route-id="@grade.Id" class="btn btn-sm btn-primary me-1">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                    </form>
                                    
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_AjaxCallPartial" />
}
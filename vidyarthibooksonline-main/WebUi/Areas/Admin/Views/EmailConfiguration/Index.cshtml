@model List<SmtpSetting>
@{
    ViewData["Title"] = "Email Configuration";
}

<div class="container-fluid">
    <div class="header d-flex justify-content-between align-items-center">
        <h1 class="header-title">Email Configuration</h1>
        
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <a class="btn btn-warning btn-sm float-end" asp-action="AddEmailConfig">Add New</a>
                </div>
                <div class="card-body">
                    <table id="datatables-multi" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Provider</th>
                                <th>From Name</th>
                                <th>From Email</th>
                                <th>SMTP Server</th>
                                <th>Port</th>
                                <th>SSL</th>
                                <th>Auth</th>
                                <th>Is Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.EmailProviderName</td>
                                <td>@item.FromName</td>
                                <td>@item.FromAddress</td>
                                <td>@item.SmtpServer</td>
                                <td>@item.SmtpPort</td>
                                <td>@(item.EnableSsl ? "Yes" : "No")</td>
                                <td>@(item.UseSmtpAuthentication ? "Yes" : "No")</td>
                                <td>@(item.IsActive ? "Yes" : "No")</td>
                                <td>
                                        <form class="delete" asp-action="DeleteEmailConfig" asp-route-id="@item.Id">

                                            <a asp-action="AddEmailConfig" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    
                                </td>
                            </tr>
                           
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_AjaxCallPartial" />
}